[
  {
    "namespace": "mailTabs",
    "functions": [
      {
        "name": "query",
        "returns": {
          "type": "array",
          "items": {
            "$ref": "MailTab"
          }
        }
      },
      {
        "name": "getSelectedMessages",
        "description": "Lists the selected messages in the current folder.",
        "permissions": ["messagesRead"],
        "returns": {
          "$ref": "messages.MessageList"
        }
      },
      {
        "name": "update",
        "parameters": [
          {
            "name": "updateProperties",
            "properties": {
              "displayedFolder": {
                "description": "Sets the folder displayed in the tab. The <permission>messagesRead</permission> permission is required to do this."
              }
            }
          }
        ]
      }      
    ],
    "events": [
      {
        "name": "onDisplayedFolderChanged",
        "permissions": [
          "accountsRead"
        ]
      },
      {
        "name": "onSelectedMessagesChanged",
        "permissions": [
          "messagesRead"
        ]
      }
    ],
    "types": [
      {
        "id": "MailTab",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "windowId": {
            "type": "integer"
          },
          "active": {
            "type": "boolean"
          },
          "sortType": {
            "type": "string",
            "enum": [
              "none",
              "date",
              "subject",
              "author",
              "id",
              "thread",
              "priority",
              "status",
              "size",
              "flagged",
              "unread",
              "recipient",
              "location",
              "tags",
              "junkStatus",
              "attachments",
              "account",
              "custom",
              "received",
              "correspondent"
            ]
          },
          "sortOrder": {
            "type": "string",
            "enum": [
              "none",
              "ascending",
              "descending"
            ]
          },
          "layout": {
            "type": "string",
            "enum": [
              "standard",
              "wide",
              "vertical"
            ]
          },
          "folderPaneVisible": {
            "type": "boolean"
          },
          "messagePaneVisible": {
            "type": "boolean"
          },
          "displayedFolder": {
            "$ref": "folders.MailFolder",
            "description": "The <permission>accountsRead</permission> permission is required."
          }
        }
      }
    ]
  }
]
